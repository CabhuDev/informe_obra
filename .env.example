# Variables de entorno para el Sistema de Informes de Obra
# Copia este archivo como .env y completa los valores

# Puerto del servidor (Render lo asigna automáticamente)
PORT=10000

# URL base del webhook para N8N
WEBHOOK_URL=https://tu-app.onrender.com/webhook/form-obra

# API Key de OpenAI para transcripción y análisis
OPENAI_API_KEY=sk-...

# Configuración de Gmail para envío de informes
GMAIL_USER=tu-email@gmail.com
GMAIL_PASSWORD=tu-app-password-de-gmail

# Configuración adicional de N8N
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
NODE_ENV=production

# Configuración de seguridad
N8N_USER_MANAGEMENT_DISABLED=true
N8N_BASIC_AUTH_ACTIVE=false

# Logging
N8N_LOG_LEVEL=info
N8N_METRICS=true
